{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        ignoreAtRules: ["include"]
      }
    ],
    "max-nesting-depth": 3,
    "selector-type-no-unknown": null,
    "selector-pseudo-class-no-unknown": [ true, {
      ignorePseudoClasses: ["host"],
    } ]
  }
}
